<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewcontroller.SleepController">
   <children>
      <Label layoutX="68.0" layoutY="20.0" text="Bed time" />
      <Label layoutX="68.0" layoutY="62.0" text="Wake up" />
      <Spinner fx:id="bedTimeHourSpinner" initialValue="12" layoutX="121.0" layoutY="16.0" max="23" onMouseClicked="#setBedTimeHour" prefHeight="25.0" prefWidth="57.0">
         <editable>true</editable>
      </Spinner>
      <Spinner fx:id="bedTimeMinuteSpinner" initialValue="30" layoutX="192.0" layoutY="16.0" max="59" min="00" onMouseClicked="#setBedTimeMinute" prefHeight="25.0" prefWidth="57.0">
      <editable>true</editable>
   </Spinner>
      <Label layoutX="178.0" layoutY="10.0" text=":" AnchorPane.leftAnchor="182.0">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <Spinner fx:id="wakeUpTimeHourSpinner" initialValue="12" layoutX="121.0" layoutY="58.0" max="23" onMouseClicked="#setWakeUpTimeHour" prefHeight="25.0" prefWidth="57.0">
         <editable>true</editable>
      </Spinner>
      <Spinner fx:id="wakeUpTimeMinuteSpinner" initialValue="30" layoutX="192.0" layoutY="58.0" max="59" onMouseClicked="#setWakeUpTimeMinute" prefHeight="25.0" prefWidth="57.0">
         <editable>true</editable>
      </Spinner>
      <Label layoutX="182.0" layoutY="52.0" text=":">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <Button layoutX="27.0" layoutY="98.0" mnemonicParsing="false" onAction="#totalSleep" text="Count Sleep" />
      <Label fx:id="totalSleepLabel" layoutX="132.0" layoutY="102.0" text="Sleep not redgisted!" />
      <ImageView fitHeight="38.0" fitWidth="57.0" layoutX="20.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/half-moon.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="45.0" fitWidth="47.0" layoutX="16.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/sunrise.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
